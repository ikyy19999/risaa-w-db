generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
        
model GalleryItem {
  id            String    @id @default(cuid())
  title         String
  description   String?
  category      String    // e.g., "Jakarta", "Yogyakarta", "Bogor"
  subcategory   String?   // e.g., "Kafe", "Taman", "Pantai"
  imageUrl      String    // Public URL from Supabase storage
  storagePath   String    // Path in 'journey' bucket for deletion
  mediaType   String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([category])
  @@index([subcategory])
}

model AdminUser {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String    // Hashed password using bcryptjs
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([email])
}